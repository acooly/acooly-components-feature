    <sql id="customerSqlSelect">
            customer.id as customer_id,
            customer.username as customer_username,
            customer.age as customer_age,
            customer.birthday as customer_birthday,
            customer.gender as customer_gender,
            customer.real_name as customer_real_name,
            customer.idcard_type as customer_idcard_type,
            customer.idcard_no as customer_idcard_no,
            customer.mobile_no as customer_mobile_no,
            customer.mail as customer_mail,
            customer.photo as customer_photo,
            customer.photo_thum as customer_photo_thum,
            customer.subject as customer_subject,
            customer.customer_type as customer_customer_type,
            customer.fee as customer_fee,
            customer.content as customer_content,
            customer.salary as customer_salary,
            customer.status as customer_status,
            customer.create_time as customer_create_time,
            customer.update_time as customer_update_time,
            customer.comments as customer_comments
    </sql>

</mapper>