<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.acooly.module.test.security.dao.CustomerDao">

    <resultMap id="customerResultMap" type="com.acooly.module.test.security.entity.Customer">
        <id property="id" column="customer_id"/>
        <result property="username" column="customer_username"/>
        <result property="age" column="customer_age"/>
        <result property="birthday" column="customer_birthday"/>
        <result property="gender" column="customer_gender"/>
        <result property="realName" column="customer_real_name"/>
        <result property="idcardType" column="customer_idcard_type"/>
        <result property="idcardNo" column="customer_idcard_no"/>
        <result property="mobileNo" column="customer_mobile_no"/>
